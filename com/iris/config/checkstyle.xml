<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Coding style guidelines -->

    <!-- Enforces max line length of 100 characters -->
    <module name="LineLength">
        <property name="max" value="100"/>
    </module>

    <!-- Ensures there is a Javadoc comment for all classes, methods, and public fields -->
    <module name="JavadocType"/>
    <module name="JavadocMethod"/>
    <module name="JavadocVariable"/>

    <!-- Enforces the use of blocks in if, for, while, do-while statements -->
    <module name="NeedBraces"/>

    <!-- Enforces CamelCase naming convention for class and method names -->
    <module name="TypeName"/>
    <module name="MethodName"/>

    <!-- Enforces proper indentation (default 4 spaces) -->
    <module name="Indentation">
        <property name="basicOffset" value="4"/>
        <property name="tabWidth" value="4"/>
    </module>

    <!-- Enforces consistent file name -->
    <module name="FileName"/>

    <!-- Prevents empty catch blocks -->
    <module name="EmptyCatchBlock"/>

    <!-- Prevents magic numbers in the code -->
    <module name="MagicNumber"/>

    <!-- Checks for redundant modifiers in classes, methods, or fields -->
    <module name="RedundantModifier"/>

</module>
